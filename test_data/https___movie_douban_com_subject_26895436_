                cn = $this.data('cn');
                pic = $this.data('pic');

                tmpl = $.templates('#episode-tmpl');
                $dialog = $(tmpl.render({playlist: sources[source], cn: cn, pic: pic}));

                $dialog.hide();
                $('body').append($dialog);
                width = $dialog.outerWidth();

                $dialog.css({
                    marginLeft: -width / 2,
                    top: $this.offset().top + $this.outerHeight()
                }).show();
            });
        });
    </script>

